# HRConnect Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME=HRConnect
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# ============================================
# API CONFIGURATION
# ============================================
API_V1_PREFIX=/api/v1

# Generate a secure secret key with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-this-in-production-use-openssl-rand-hex-32

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# DATABASE - SQL SERVER
# ============================================
# Format: mssql+pyodbc://username:password@host:port/database?driver=ODBC+Driver+17+for+SQL+Server
# Example for local SQL Server:
DATABASE_URL=mssql+pyodbc://@%28localdb%29%5CMSSQLLocalDB/hrconnect?driver=ODBC+Driver+17+for+SQL+Server

# Example for Azure SQL:
# DATABASE_URL=mssql+pyodbc://username@servername:password@servername.database.windows.net:1433/hrconnect?driver=ODBC+Driver+17+for+SQL+Server

DATABASE_ECHO=True

# ============================================
# AZURE OPENAI CONFIGURATION
# ============================================
# Get these from Azure Portal -> Your OpenAI Resource
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# LLM Parameters
AZURE_OPENAI_TEMPERATURE=0.7
AZURE_OPENAI_MAX_TOKENS=1000

# ============================================
# CHROMADB CONFIGURATION
# ============================================
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=hr_policies

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=60

# ============================================
# CHATBOT CONFIGURATION
# ============================================
MAX_CONVERSATION_HISTORY=10
SIMILARITY_THRESHOLD=0.7
TOP_K_RESULTS=5

# ============================================
# SECURITY (Optional)
# ============================================
# Enable/Disable HTTPS only (set to True in production)
# HTTPS_ONLY=False

# ============================================
# NOTES
# ============================================
# 1. Never commit the .env file to version control
# 2. Keep your SECRET_KEY and API keys secure
# 3. Use strong passwords for database connections
# 4. In production, set DEBUG=False
# 5. Update ALLOWED_ORIGINS to match your frontend domain
